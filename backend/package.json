{
  "name": "sandicoin-backend",
  "version": "1.0.0",
  "description": "SandiCoin backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node scripts/dev-runner.js",
    "dev:node1": "dotenv -e .env.node1 -- tsx watch src/server.ts",
    "dev:node2": "dotenv -e .env.node2 -- tsx watch src/server.ts",
    "dev:node3": "dotenv -e .env.node3 -- tsx watch src/server.ts",
    "dev:node4": "dotenv -e .env.node4 -- tsx watch src/server.ts",
    "dev:kill": "node scripts/kill-nodes.js",
    "dev:reset": "node scripts/kill-nodes.js && echo 'ðŸš€ Network reset complete! You can now start fresh nodes.'",
    "dev:status": "lsof -i :3000-3010 2>/dev/null | grep LISTEN || echo 'No SandiCoin nodes running'",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "nodejs",
    "typescript"
  ],
  "author": "SandiCoin Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.10",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
